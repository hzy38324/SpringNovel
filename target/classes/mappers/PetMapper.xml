<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springnovel.mybatis.mapper.PetMapper">

    <select id="getPets" resultType="com.springnovel.mybatis.model.Pet">
        select * from pet where owner = #{owner}
    </select>

    <insert id="save">
        INSERT INTO pet (name,owner,species,sex) VALUES(#{name},#{owner},#{species},#{sex})
    </insert>

    <delete id="deleteAll">
        DELETE from pet
    </delete>

</mapper>